@model Employee

@{
	var departments = new SelectList(ViewBag.Departments, nameof(Department.Id), nameof(Department.name));
}

<form asp-action="Create" method="post">
	<div class="form-group">
		<label class="col-form-label" asp-for="Name"></label>
		<input type="text" asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="Age"></label>
		<input type="text" asp-for="Age" class="form-control" />
		<span asp-validation-for="Age" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="Address"></label>
		<input type="text" asp-for="Address" class="form-control" />
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="Salary"></label>
		<input type="text" asp-for="Salary" class="form-control" />
		<span asp-validation-for="Salary" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="Email"></label>
		<input type="email" asp-for="Email" class="form-control" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="PhoneNumber"></label>
		<input type="text" asp-for="PhoneNumber" class="form-control" />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="HiringDate"></label>
		<input type="date" asp-for="HiringDate" class="form-control" />
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="DepartmentId"></label>
		<select class="form-control" asp-items="@departments" asp-for="DepartmentId">
			<option value=""> -- Select Department --</option>
		</select>
	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="ImgUrl"></label>
		<input type="file" asp-for="ImgUrl" class="form-control" />
	</div>

	<input type="submit" value="Create" class="btn btn-primary" />
	<a asp-action="Index" class="btn btn-light">Back To List</a>
</form>